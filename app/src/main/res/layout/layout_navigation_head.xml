<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_head"
    android:layout_width="300dp"
    android:layout_height="240dp"
    android:background="@drawable/captain_android"
    android:gravity="bottom"
    android:orientation="vertical">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/userimage"
        android:layout_width="@dimen/item_margin"
        android:layout_height="@dimen/item_margin"
        android:layout_marginBottom="@dimen/space_xxlarge"
        android:layout_marginLeft="@dimen/space_xxlarge"
        android:src="@drawable/ic_type_github"
        app:civ_border_color="@color/translucent_white"
        app:civ_border_width="5dp"/>

</LinearLayout>